/dts-v1/;
#include "rk3399-rock-pi-4.dtsi"

/ {
	model = "Radxa ROCK Pi 4C";
	compatible = "radxa,rockpi4c", "radxa,rockpi4", "rockchip,rk3399";

	aliases {
		mmc2 = &sdio0;
	};

	vcc3v3_dp: vcc3v3-dp-regulator {
		compatible = "regulator-fixed";
		enable-active-high;
		gpio = <&gpio1 RK_PD0 GPIO_ACTIVE_HIGH>;
		pinctrl-names = "default";
		pinctrl-0 = <&dp_pwr_en>;
		regulator-name = "vcc3v3_dp";
		regulator-always-on;
		regulator-boot-on;
		vin-supply = <&vcc3v3_sys>;
	};

	virtual_pd: virtual-pd {
		compatible = "linux,extcon-pd-virtual";
		/* 0: positive, 1: negative*/
		vpd,init-flip = <0>;
		/* 0: u2, 1: u3*/
		vpd,init-ss = <1>;
		/* 0: dfp, 1: ufp, 2: dp 3: dp/ufp */
		vpd,init-mode = <2>;
		hpd-gpios = <&gpio4 25 GPIO_ACTIVE_LOW>;
		pinctrl-names = "default";
		pinctrl-0 = <&hpd_en>;
		dp-pwr-supply = <&vcc3v3_dp>;
	};
};

&cdn_dp {
	extcon = <&virtual_pd>;
	status = "okay";
};

&es8316 {
	pinctrl-0 = <&hp_detect &hp_int>;
	pinctrl-names = "default";
	interrupt-parent = <&gpio1>;
	interrupts = <RK_PA1 IRQ_TYPE_LEVEL_HIGH>;
};

&pinctrl {
	usb2 {
		vcc5v0_host_en: vcc5v0-host-en {
			rockchip,pins = <3 RK_PD6 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	hpd {
		hpd_en: hpd-en {
			rockchip,pins = <4 RK_PD1 RK_FUNC_GPIO &pcfg_pull_none>;
		};
	};

	dp {
		dp_pwr_en: dp-pwr-en {
			rockchip,pins = <1 24 RK_FUNC_GPIO &pcfg_pull_up>;
		};
	};
};

&sdio0 {
	status = "okay";

	brcmf: wifi@1 {
		compatible = "brcm,bcm4329-fmac";
		reg = <1>;
		interrupt-parent = <&gpio0>;
		interrupts = <RK_PA3 GPIO_ACTIVE_HIGH>;
		interrupt-names = "host-wake";
		pinctrl-names = "default";
		pinctrl-0 = <&wifi_host_wake_l>;
	};
};

&sound {
	hp-det-gpio = <&gpio1 RK_PA0 GPIO_ACTIVE_HIGH>;
};

&tcphy0 {
	extcon = <&virtual_pd>;
	status = "okay";
};

&uart0 {
	status = "okay";

	bluetooth {
		compatible = "brcm,bcm4345c5";
		clocks = <&rk808 1>;
		clock-names = "lpo";
		device-wakeup-gpios = <&gpio2 RK_PD3 GPIO_ACTIVE_HIGH>;
		host-wakeup-gpios = <&gpio0 RK_PA4 GPIO_ACTIVE_HIGH>;
		shutdown-gpios = <&gpio0 RK_PB1 GPIO_ACTIVE_HIGH>;
		max-speed = <1500000>;
		pinctrl-names = "default";
		pinctrl-0 = <&bt_host_wake_l &bt_wake_l &bt_enable_h>;
		vbat-supply = <&vcc3v3_sys>;
		vddio-supply = <&vcc_1v8>;
	};
};

&vcc5v0_host {
	enable-active-high;
	gpio = <&gpio3 RK_PD6 GPIO_ACTIVE_HIGH>;
	pinctrl-names = "default";
	pinctrl-0 = <&vcc5v0_host_en>;
};
